{
  "overrides": [
    {
      "files": [
        "*.json",
        ".**rc"
      ],
      "options": {
        "parser": "json-stringify"
      }
    },
    {
      "files": [
        "*.wxss",
        "*.css"
      ],
      "options": {
        "parser": "css"
      }
    },
    {
      "files": [
        "*.wxml",
        ".html"
      ],
      "options": {
        "htmlWhitespaceSensitivity": "ignore",
        "parser": "html",
        "printWidth": 80
      }
    },
    {
      "files": [
        "*.md"
      ],
      "options": {
        "parser": "markdown"
      }
    }
  ]
}
