{
  "env": {
    "browser": true
  },
  "extends": "airbnb-base",
  "globals": {
    "App": true,
    "Component": true,
    "Page": true,
    "getApp": true,
    "getCurrentPages": true,
    "wx": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": [
    "babel"
  ],
  "rules": {
    "arrow-body-style": "off",
    "arrow-parens": "off",
    "comma-dangle": [
      "error",
      "always-multiline"
    ],
    "func-names": "off",
    "global-require": "off",
    "id-length": "off",
    "import/extensions": "off",
    "import/first": "off",
    "import/no-extraneous-dependencies": "off",
    "import/no-mutable-exports": "off",
    "import/no-named-as-default": "off",
    "import/no-unresolved": "off",
    "import/prefer-default-export": "off",
    "jsx-a11y/label-has-for": "off",
    "jsx-a11y/no-static-element-interactions": "off",
    "linebreak-style": [
      "error",
      "unix"
    ],
    "max-len": [
      "error",
      120,
      {
        "ignoreComments": true
      }
    ],
    "max-lines": [
      "error",
      {
        "max": 500
      }
    ],
    "no-await-in-loop": "off",
    "no-bitwise": "off",
    "no-console": "error",
    "no-continue": "off",
    "no-loop-func": "off",
    "no-mixed-operators": "off",
    "no-param-reassign": "off",
    "no-plusplus": "off",
    "no-restricted-syntax": "off",
    "no-underscore-dangle": "off",
    "no-unused-vars": [
      "error",
      {
        "varsIgnorePattern": "regeneratorRuntime"
      }
    ],
    "object-curly-newline": [
      "error",
      {
        "multiline": true
      }
    ],
    "object-property-newline": "off",
    "object-shorthand": [
      "error",
      "properties"
    ],
    "operator-assignment": "off",
    "prefer-destructuring": [
      "warn",
      {
        "AssignmentExpression": {
          "array": false,
          "object": false
        },
        "VariableDeclarator": {
          "array": false,
          "object": true
        }
      }
    ],
    "semi": [
      "error",
      "always"
    ],
    "spaced-comment": [
      "error",
      "always",
      {
        "block": {
          "exceptions": [
            "*"
          ]
        }
      }
    ]
  }
}
